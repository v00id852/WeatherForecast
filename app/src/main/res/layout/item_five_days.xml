<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/five_days_forecast">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_one"
                android:textSize="16dp"
                android:text="今天"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_one"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_below="@id/txt_one"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_two"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:text="今天"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_two"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_two"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_three"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:text="今天"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_three"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_three"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_four"
                android:textSize="16dp"
                android:text="今天"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_four"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_four"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_five"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:text="今天"

                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_five"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_five"
                />

        </RelativeLayout>

    </LinearLayout>



    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:layout_below="@id/five_days_forecast"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/colorGrey"
        android:layout_below="@+id/button_bar"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="24dp"
        android:id="@+id/button_bar"
        android:orientation="horizontal"
        android:layout_below="@id/line_chart"
        android:layout_marginTop="16dp"
        android:background="@drawable/black_border"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonSelected"
            android:text="@string/temperature_button"
            android:textColor="@color/colorButtonFontSelected"
            android:id="@+id/button_bar_temperature"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonUnselected"
            android:textColor="@color/colorButtonFontUnselected"
            android:text="@string/humidity_button"
            android:id="@+id/button_bar_humidity"
            />

    </LinearLayout>

</RelativeLayout>